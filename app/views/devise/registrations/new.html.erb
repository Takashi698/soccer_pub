<br>
<h3 class="text-center my-3">新規登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="field">
    <%= image_tag resource.image.url, class: 'rounded-circle' if resource.image.present? %><br/>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
    <%= f.object.errors.full_messages_for(:name).join(',') %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    <%= f.object.errors.full_messages_for(:name).join(',') %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
    <%= f.object.errors.full_messages_for(:password).join(',') %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
    <%= f.object.errors.full_messages_for(:name).join(',') %>
  </div>

  <div class="form-group">
    <%= f.submit t('.sign_up'), class: 'btn btn-success' %>
  </div>

  <div class="form-group">
    <%= link_to 'ゲストログイン(閲覧用)', users_guest_sign_in_path, method: :post, class: 'btn btn-primary' %>
  </div>
<% end %>

