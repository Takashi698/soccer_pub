<h3>game一覧</h3>

<table>
  <tr>
    <th>内容</th>
  </tr>
  <tr>
    <%= link_to 'game新規作成', new_game_path, class:'btn btn-primary' %> 
    <%= search_form_for @q do |f| %>
      <%= f.label :content, "Keyword" %>
      <%= f.search_field :content_cont %>
      <%= f.submit "検索" %>
    <% end %>

    <% @games.each do |game| %>
      <td><%= game.content %></td>
      <td><%= link_to '詳細', game_path(game.id) %></td>
      <td><%= link_to '編集', edit_game_path(game.id) %></td>
      <td><%= link_to '削除', game_path(game.id), method: :delete, data: {confirm: '削除してよろしいですか？'} %></td>
  </tr>
  <div class = "balloon1">
    <%= link_to (game.content), game_path(game.id) %><br>
  </div>
  <% end %>
  </table>
  <div class = 'pagination' >
      <%= paginate @games %>
</div> 

