<h3 class="text-center mt-5">試合ルーム一覧</h3>
<br><br>
<%= link_to '試合ルームの新規作成', new_game_path, class:'btn-border-bottom' %> 
<br><br>

<div class="col text-middle">
<% if notice %>
  <p class="alert alert-notice"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-error"><%= alert %></p>
<% end %>
</div>


<%= search_form_for @q do |f| %>
  <%= f.search_field :content_cont %>
  <%= f.submit "検索" %>
<% end %>

<% @games.each do |game|%>
  <div class = "box11" > 
  <% @team_a = Team.all.find_by(id: game.upshot.team_a_id) %>
  <%= @team_a.name %> 対
  <% @team_b = Team.all.find_by(id: game.upshot.team_b_id) %>
  <%= @team_b.name %> 
  <td><%= link_to '試合ルーム', game_path(game.id) %></td><br>
  </div>
  <td><%= link_to game.user.name, user_path(game.user_id), class: 'btn btn-border mx-auto d-block' %></td>
<% end %>
  <br><br>

  <td><%= link_to 'チーム一覧', teams_path, class: 'btn btn-border mx-auto d-block' %></td>


  
  <div class = 'pagination' >
      <%= paginate @games %>
  </div> 
  <br><br><br><br><br>
