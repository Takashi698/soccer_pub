<h3 class="text-center mt-5">試合ルーム一覧</h3>
<br><br>
<%= link_to '試合ルームの新規作成', new_game_path, class:'btn-border-bottom' %> 
<br><br>

<%= search_form_for @q do |f| %>
  <%= f.search_field :content_cont %>
  <%= f.submit "検索" %>
<% end %>

<% @games.each do |game|%>
  <div class = "box11" >
  <p> "#{@game.upshot.team_a_id} VS #{@game.upshot.team_b_id}" </p> 
    <% if game.content.length >= 25 %>
      <% text = game.content %>
      <% text = text.slice(0..25) %>
      <% text += "..." %>
      <%= link_to (text), game_path(game.id) %>
    <% else %> 
      <%= link_to (game.content), game_path(game.id) %>
    <% end %>
  </div>
  <br>

  <td><%= link_to '試合ルーム', game_path(game.id) %></td>
  <td><%= link_to '編集', edit_game_path(game.id) %></td>
  <td><%= link_to '削除', game_path(game.id), method: :delete, data: {confirm: '削除してよろしいですか？'} %></td>
  <% end %>
  <div class = 'pagination' >
      <%= paginate @games %>
  </div> 

