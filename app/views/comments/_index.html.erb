<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
    <% end %>
  </ul>
<% end %>

<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
      <p><%= comment.content %></p>
      <p><%= image_tag comment.image.url, class: 'rounded-circle' if comment.image.present?%></p>
      <% if current_user == comment.user %>
        <p><%= link_to "コメント編集", edit_game_comment_path(@game, comment), remote: true %></p>
        <p><%= link_to 'コメントを削除する', game_comment_path(comment.game_id, comment.id), method: :delete, remote: true %></p>
      <% end %>
      <p class = "hr"></p>
    <% end %>
  <% end %>
</ul>