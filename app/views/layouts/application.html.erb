 <header>
<%= render 'header'  %>
</header>

<!DOCTYPE html>
<html>
  <head>
    <title>SoccerPub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class = "bkg_color">  
    <div class="menu">
      <div class="title">MENU</div>
      <ul class="nav">
        <% if user_signed_in? %>
          <li><%= link_to 'マイページ', user_path(current_user.id) %></li>
          <li><%= link_to '試合ルーム一覧', games_path %></li>
          <li><%= link_to 'チーム一覧', teams_path %></li>
        <% end %>
      </ul>
    </div>

      <div class="col text-center" >
        <div class="container">
          <div class="row">
            <div class="main_container col-md-9 col-sm-9 col-xs-12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
      <footer>
            <%= render 'footer'  %>
      </footer>
    </body>
  </html> 