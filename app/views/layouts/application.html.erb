<!DOCTYPE html>
<html>
  <head>
    <title>SoccerPub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if current_user.nil? %>
      <div class='container-fluid'>
        <div class='row'>
          <%= render 'header' %>
        </div>
        <div class='col-md-9'>
      </div>
      <div class='container-fluid'>
        <div class='row'>
          <%= yield %>
          <%= render 'devise/shared/links' %>
        </div>
      </div>
      <% else %>
      <div class='container-fluid'>
        <div class='row'>
          <%= render 'header' %>
        </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <div class='row'>
          <div class='col-md-3'>
            <%= render 'sidemenu' %>
          </div>
          <div class='col-md-9'>
            <%= yield %>
          </div>
        </div>
      </div>
    <% end %>

      <%# deviseの設定 %>
      <% if false %>
          <div class="container-fluid py-4 <%= devise_controller? ? 'mw-md' : 'mw-xl' %>">
            <%= yield %>
          </div>
      <% end %>

  </body>
</html>
